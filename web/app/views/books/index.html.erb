<p id="notice"><%= notice %></p>

<h1>Bienvenido, <%= current_user.email %></h1>

<table>
  <thead>
    <tr>
      <th>Libros</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.name %></td>
        <td><%= link_to 'Notas', book_notes_path(book) %></td>
        <td><%= link_to 'Informacion de libro', book %></td>
        <td><%= link_to 'Editar nombre', edit_book_path(book) %></td>
        <td><%= link_to 'Eliminar libro', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo libro', new_book_path %>
